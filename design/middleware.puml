@startuml "frontend_api"
package "Frontend API" {

	interface StateAPI {
		task_create(&mut self) -> TaskID;
		task_get(&self) -> &Task
		task_mod(&mut self, task_id: TaskID, edit_fn: impl FnOnce(&mut Task))
		task_rm(&mut self, task_id: TaskID)

		view_create(&mut self) -> ViewID
		view_get(&self, view_id: ViewID) -> &View
		view_mod(&mut self, view_id: ViewID, edit_fn: impl FnOnce(&mut View))
		view_rm(&mut self, view_id: ViewID)

		script_create(&mut self) -> ScriptID
		script_get(&self, view_id: ScriptID) -> &View
		script_mod(&mut self, view_id: ScriptID, edit_fn: impl FnOnce(&mut Script))
		script_rm(&mut self, view_id: ScriptID)
		
		register_event(&mut self, String)
		script_event_notify(&mut self, UIEvent)
	}

	enum ScriptEvent {
		' UI Triggers that cause
		RegisteredEvent(&'static str),
	}
	
	enum StateUpdate {
		TaskUpdate(TaskID)
		ViewUpdate(ViewID)
		ScriptUpdate(ScriptID)
		MultiStateUpdate(())
	}

	note bottom of StateUpdate
		This enum is an event that is 
		sent to the frontend when 
		middleware state changes.
	end note
}
